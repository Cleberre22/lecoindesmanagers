{% extends 'base.html.twig' %}

{% block title %}PostForum index{% endblock %}

{% block body %}
    <h1>PostForum index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Contenu</th>
                <th>Auteur</th>
                <th>Créer le</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post_forum in post_forums %}
            <tr>
                <td>{{ post_forum.id }}</td>
                <td>{{ post_forum.titlePost }}</td>
                <td>{{ post_forum.CategoryForum.nameCategory }}</td>
                <td>{{ post_forum.contentPost }}</td>
                <td>{{ post_forum.users.pseudo }}</td>
                <td>{{ post_forum.createdAt ? post_forum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post_forum.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('post_forum_show', {'id': post_forum.id}) }}">show</a>
                    <a href="{{ path('post_forum_edit', {'id': post_forum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_forum_new') }}">Create new</a>
{% endblock %}
